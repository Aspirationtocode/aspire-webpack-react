.user
	transition all ease .3s
	user-select none
	padding 5px 10px
	align-items center
	justify-content space-between
	display flex
	&:hover
		background-color #449
		color #fff
		cursor pointer

	&__remove-button
		width 32px
		height 32px
		image-bg('delete.svg')
		transition all ease .6s

		&:hover
			image-bg('delete-light.svg')
