.user
	transition all ease .3s
	user-select none
	align-items center
	justify-content space-between
	display flex
	&:hover
		background-color #449
		color #fff
		cursor pointer

	&__text
		margin 5px 10px
		flex-grow 1

	&__remove-button
		width 28px
		height 28px
		image-bg('delete.svg')
		transition all ease .6s

		&:hover
			image-bg('delete-light.svg')
